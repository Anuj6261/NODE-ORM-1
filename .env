# Database connection used by drizzle (point to Docker container on host port 5433)
DATABASE_URL=postgres://postgres:postgres@localhost:5433/mydb?sslmode=disable

# Individual vars (drizzle.config.js will use these if DATABASE_URL is not set)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mydb
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
